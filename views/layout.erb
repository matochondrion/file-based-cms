<html>
  <head>
    <title>CMS</title>
    <link href="/stylesheets/styles.css/" rel="stylesheet" type="text/css">
  </head>

  <body>
    <% if session[:message] %>
      <p class="message"><%= session.delete(:message) %></p>
    <% end %>

    <% if session[:username] %>
      <%= yield %>

      <div>

        <span class="user-status"><%= "Signed in as #{session[:username]}" %></span>

        <form class="inline" method="post" action="/users/signout">
          <button>Sign Out</button>
        </form>

      </div>

    <% else %>
      <form method="get" action="/users/signin">
        <button>Sign In</button>
      </form>
    <% end %>

  </body>
</html>

